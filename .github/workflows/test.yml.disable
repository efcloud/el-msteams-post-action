name: "Send notifications to MS Teams channel"

on: [push]

jobs:
  notify:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v1
      - name: Test sample notification
        uses: ./
        with:
          job_status: ${{ job.status }}
          event_id: "testing custom action for device iphone8_12_4"
          details: "Triggered from custom action repo"
          webhook_url: ${{ secrets.ADD_WEBHOOK_URL }}
